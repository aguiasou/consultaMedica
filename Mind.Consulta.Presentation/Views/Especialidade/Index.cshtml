@model IEnumerable<Mind.Consulta.Presentation.Models.EspecialidadeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Especialidades</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EspecialidadeId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EspecialidadeId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EspecialidadeId }) |
            </td>
        </tr>
    }

</table>
